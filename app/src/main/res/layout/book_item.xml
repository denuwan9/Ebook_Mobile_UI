<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_container"
    android:orientation="vertical">

    <!-- Background Decoration (Optional) -->

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="50dp"
        android:alpha="0.05"
        android:src="@drawable/baseline_auto_stories_24"
        android:layout_gravity="bottom"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu_icon"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search_icon"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/top_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Harry Potter and the \nDeathly Hallows"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="J.K. Rowling"
            android:textColor="#616161"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buy_btn"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_purple"
                android:text="Buy E-book"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_2"
                android:text="Buy Audio"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="585dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Like This"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:src="@drawable/bottom_img_1"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:src="@drawable/bottom_img_2"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:src="@drawable/bottom_img_3"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>